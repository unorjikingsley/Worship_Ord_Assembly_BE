generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Community {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  first_Name String
  last_Name String
  email String @unique
  message String?
  phone_Number String?
}

model FirstTimer {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  first_Name String
  last_Name String
  email String
  phone_Number String
  inviter String?
  location String?
  prayerRequest String?
}

model PrayerForm {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  first_Name String
  last_Name String
  email String
  phone_Number String
  prayerRequest String
}

model TestimonyForm {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  avatar String
  avatarPublicId String
  first_Name String
  last_Name String
  email String
  phone_Number String
  title String @default("Give a title to this testimony")
  testimony String
  accept Boolean @default(false)
}

model Message {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  image String
  imagePublicId String
  Date String @map("date")
  Topic String
  sub_Topic String
  minister String
  duration Int
  message String
  link String
}

model WOA_Community {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  full_Name    String
  email        String   @unique
  phone_Number String?
  communities    CommunityStatus @default(KidsProgram)
  reasons      String?
}

enum CommunityStatus {
  MarriageCounsellingWorkshop
  YouthProgramsAndCommunities
  KidsProgram
  MenMinistry
  YouthLeader
  TrybeTeam
}

model ContactUsModel {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  first_Name    String
  last_Name    String
  email        String
  phone_Number String?
  descriptions      String?
}
